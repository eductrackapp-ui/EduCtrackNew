            android:text="📅 Week 2 Results"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:background="#EDE7F6"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"
            android:layout_width="match_parent"
