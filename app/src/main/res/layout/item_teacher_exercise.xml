<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/exerciseCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Status Indicator -->
            <View
                android:id="@+id/statusIndicator"
                android:layout_width="4dp"
                android:layout_height="50dp"
                android:background="#4CAF50"
                android:layout_marginEnd="16dp" />

            <!-- Exercise Icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/exerciseIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circular_avatar_bg"
                    android:padding="8dp"
                    android:src="@drawable/ic_assignment"
                    android:scaleType="centerCrop"
                    app:tint="#667eea" />
            </androidx.cardview.widget.CardView>

            <!-- Exercise Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/exerciseTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exercise Title"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/exerciseSubject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mathematics"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Status Badge -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <TextView
                    android:id="@+id/exerciseStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#F5F5F5"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:text="PUBLISHED"
                    android:textColor="#4CAF50"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Details Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/exerciseType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QUIZ"
                    android:textColor="#667eea"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins"
                    android:background="@drawable/type_badge_bg"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp" />

                <TextView
                    android:id="@+id/difficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium"
                    android:textColor="#FF9800"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/maxPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 pts"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins" />
        </LinearLayout>

        <!-- Bottom Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/exerciseClass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Class 6A"
                android:textColor="#666666"
                android:textSize="12sp"
                android:fontFamily="@font/poppins" />

            <TextView
                android:id="@+id/createdDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oct 15, 2025"
                android:textColor="#999999"
                android:textSize="12sp"
                android:fontFamily="@font/poppins" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
