<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Contenu principal scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_nav_bar"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Header -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp">

                <!-- Logo + Texte -->
                <LinearLayout
                    android:id="@+id/logoContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imgLogo"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/logo"
                        android:contentDescription="App Logo" />

                    <TextView
                        android:id="@+id/tvWelcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="Admin Dashboard"
                        android:textColor="#333333"
                        android:textSize="22sp"
                        android:fontFamily="@font/poppins"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Icônes avec badges -->
                <LinearLayout
                    android:id="@+id/iconsContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp">
                        <ImageView
                            android:id="@+id/navNotifications"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_notifications"
                            android:clickable="true"
                            android:focusable="true"
                            android:contentDescription="Notifications" />
                        <TextView
                            android:id="@+id/badgeNotifications"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/bg_badge"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp"
                            android:visibility="gone"/>
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:id="@+id/navProfile"
                        android:src="@drawable/ic_profile"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="Profile" />
                </LinearLayout>
            </RelativeLayout>

            <!-- Ligne de séparation -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_marginBottom="12dp"/>

            <!-- Champ de recherche admin -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/rounded_top_nav_bg"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_search"
                    app:tint="#888888" />

                <EditText
                    android:id="@+id/etSearchAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@null"
                    android:hint="Search teachers, students..."
                    android:textColor="#333333"
                    android:textColorHint="#888888"
                    android:singleLine="true"
                    android:padding="0dp"/>
            </LinearLayout>

            <!-- Titre principal -->
            <TextView
                android:id="@+id/textTitleAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Welcome, Admin"
                android:textAlignment="center"
                android:textColor="#333333"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage your school effectively"
                android:textAlignment="center"
                android:textColor="#333333"
                android:textSize="14sp" />

            <!-- Admin Dashboard Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:weightSum="3">

                <!-- Manage Teachers -->
                <LinearLayout
                    android:id="@+id/btnTeachers"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/rounded_top_nav_bg"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="84dp"
                        android:layout_height="49dp"
                        android:src="@drawable/teacher"
                        android:contentDescription="Teachers" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teachers"
                        android:textAllCaps="true"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Manage Students -->
                <LinearLayout
                    android:id="@+id/btnStudents"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/rounded_top_nav_bg"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="41dp"
                        android:src="@drawable/devoir"
                        android:contentDescription="Students" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Students"
                        android:textAllCaps="true"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Analytics -->
                <LinearLayout
                    android:id="@+id/btnAnalytics"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/rounded_top_nav_bg"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_results"
                        android:contentDescription="Analytics" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Analytics"
                        android:textAllCaps="true"
                        android:textColor="#333333"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- Section personnes connectées -->

            <!-- Carousel juste en dessous des utilisateurs en ligne -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Dashboard Highlights"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="6dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerCarousel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.cardview.widget.CardView>

            <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
                android:id="@+id/carouselIndicators"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                app:dotsSize="6dp"
                app:dotsSpacing="4dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Barre de navigation admin -->
    <LinearLayout
        android:id="@+id/bottom_nav_bar"
        android:layout_width="284dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/bg_bottom_nav"
        android:elevation="12dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:weightSum="5">

        <!-- dashbord -->
        <LinearLayout
            android:id="@+id/btnDashboard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="58dp"
                android:layout_height="40dp"
                android:src="@drawable/dashbord" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>



        <!-- Home -->
        <LinearLayout
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="54dp"
                android:layout_height="39dp"
                android:src="@drawable/home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
