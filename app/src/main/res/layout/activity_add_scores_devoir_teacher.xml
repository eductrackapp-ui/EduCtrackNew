<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 📝 Titre -->
        <TextView
            android:id="@+id/tvExamTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📘 Homework Results – Student Scores"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#5E17EB"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- 🔑 Student Code -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilStudentCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#5E17EB"
            app:startIconDrawable="@drawable/ic_profile"
            app:startIconTint="#5E17EB">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etStudentCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Student Code (ex: EDF-P3-001)"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 📅 Date Picker -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundMode="outline"
            app:startIconDrawable="@drawable/ic_event"
            app:startIconTint="#5E17EB">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Date"
                android:focusable="false"
                android:clickable="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 📖 Period Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Period"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerPeriod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/periods"
            android:layout_marginBottom="16dp" />

        <!-- 🎓 Academic Year -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Academic Year"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/years"
            android:layout_marginBottom="16dp" />

        <!-- 📚 Subjects -->
        <include layout="@layout/include_subjects_form" />

        <!-- ✅ Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveAndBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save and Return"
            app:backgroundTint="#5E17EB"
            android:textColor="#FFFFFF"
            app:cornerRadius="8dp"
            app:icon="@drawable/ic_save"
            app:iconTint="#FFFFFF"
            app:iconGravity="textStart"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</ScrollView>
