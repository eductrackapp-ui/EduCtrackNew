<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/circular_white_bg"
                android:padding="10dp"
                android:src="@drawable/ic_back"
                android:contentDescription="Back"
                app:tint="#667eea" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Child Details"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins" />
        </RelativeLayout>

        <!-- Child Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/child_detail_gradient"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Main Info Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <!-- Avatar -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="8dp">

                        <ImageView
                            android:id="@+id/childAvatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/circular_avatar_bg"
                            android:padding="12dp"
                            android:src="@drawable/ic_student_avatar"
                            android:scaleType="centerCrop" />
                    </androidx.cardview.widget.CardView>

                    <!-- Child Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/childName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Child Name"
                            android:textColor="#FFFFFF"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins" />

                        <TextView
                            android:id="@+id/childClass"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Class 6A"
                            android:textColor="#E8F4FD"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/childGrade"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grade 6"
                            android:textColor="#E8F4FD"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins" />

                        <TextView
                            android:id="@+id/childBranch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kacyiru Campus"
                            android:textColor="#E8F4FD"
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <!-- Grade Display -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/overallGrade"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="85.5%"
                            android:textColor="#FFFFFF"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="4dp"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:id="@+id/performanceStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#FFFFFF"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp"
                                android:text="EXCELLENT"
                                android:textColor="#4CAF50"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/poppins" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

                <!-- Student Code Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/student_code_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Student ID Code"
                            android:textColor="#80FFFFFF"
                            android:textSize="11sp"
                            android:fontFamily="@font/poppins" />

                        <TextView
                            android:id="@+id/studentCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ABC123XY"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnCopyCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        android:foreground="?android:attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#40FFFFFF"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="8dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_copy"
                                app:tint="#FFFFFF"
                                android:layout_marginEnd="6dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Copy"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/poppins" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Performance Summary Cards -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Performance Summary"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="20dp">

            <!-- Weekly Performance Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_weekly_chart"
                        app:tint="#4CAF50" />

                    <TextView
                        android:id="@+id/weeklyAverage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="84.2%"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weekly Avg"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Monthly Performance Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_monthly_chart"
                        app:tint="#2196F3" />

                    <TextView
                        android:id="@+id/monthlyAverage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="86.1%"
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monthly Avg"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Subject Performance -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Subject Performance"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/subjectPerformanceRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" />

        <!-- Quick Actions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Quick Actions"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- First Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="12dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnViewExams"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_exams"
                            app:tint="#667eea"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Exams"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnViewHomework"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_homework"
                            app:tint="#9C27B0"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Homework"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Second Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnViewReports"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/rapport"
                            app:tint="#FF9800"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reports"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnViewExercises"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_exercise"
                            app:tint="#4CAF50"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Exercises"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/poppins" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
