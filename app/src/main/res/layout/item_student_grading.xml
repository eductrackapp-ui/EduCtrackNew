<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gradingCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Grade Indicator -->
            <View
                android:id="@+id/gradeIndicator"
                android:layout_width="4dp"
                android:layout_height="50dp"
                android:background="#4CAF50"
                android:layout_marginEnd="16dp" />

            <!-- Student Avatar -->
            <androidx.cardview.widget.CardView
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/studentAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circular_avatar_bg"
                    android:padding="6dp"
                    android:src="@drawable/ic_student_avatar"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <!-- Student Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/studentName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Name"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/gradeStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#F5F5F5"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="3dp"
                        android:text="PENDING"
                        android:textColor="#FF9800"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Grade Display -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/percentageDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Percentage"
                    android:textColor="#666666"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppins" />
            </LinearLayout>
        </LinearLayout>

        <!-- Grading Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/grading_section_bg"
            android:padding="16dp">

            <!-- Score Input Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score:"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins"
                    android:layout_marginEnd="12dp" />

                <EditText
                    android:id="@+id/scoreInput"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:background="@drawable/score_input_bg"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="numberDecimal"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins"
                    android:paddingHorizontal="8dp" />

                <TextView
                    android:id="@+id/maxScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/ 100"
                    android:textColor="#666666"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Feedback Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feedback:"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/feedbackInput"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/feedback_input_bg"
                android:gravity="top|start"
                android:hint="Enter feedback for the student..."
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:textColor="#333333"
                android:textSize="14sp"
                android:fontFamily="@font/poppins"
                android:padding="12dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
