<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Subject Icon -->
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/subjectIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“š"
                android:textSize="20sp" />

        </LinearLayout>

        <!-- Homework Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/homeworkTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mathematics Assignment"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:fontFamily="@font/poppins"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/homeworkSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mathematics"
                android:textSize="12sp"
                android:textColor="#667eea"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/homeworkDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complete exercises 1-10 from chapter 5"
                android:textSize="14sp"
                android:textColor="#666666"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_calendar"
                    android:layout_marginEnd="4dp"
                    app:tint="#999999" />

                <TextView
                    android:id="@+id/dueDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Due: Oct 15, 2025"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:fontFamily="@font/poppins_regular" />

            </LinearLayout>

        </LinearLayout>

        <!-- Status and Priority -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/statusBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/status_badge_pending"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:fontFamily="@font/poppins" />

            <TextView
                android:id="@+id/priorityIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High"
                android:textSize="10sp"
                android:textColor="#FF5722"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
