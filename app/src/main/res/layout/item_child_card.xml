<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/childCard"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/child_card_gradient"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Child Avatar -->
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/childAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circular_avatar_bg"
                    android:padding="8dp"
                    android:src="@drawable/ic_student_avatar"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <!-- Child Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/childName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Child Name"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/childClass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class 6A"
                    android:textColor="#E8F4FD"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins" />

                <TextView
                    android:id="@+id/childBranch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kacyiru Campus"
                    android:textColor="#E8F4FD"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppins" />
            </LinearLayout>

            <!-- Grade Display -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/overallGrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="85%"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/performanceStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="3dp"
                        android:text="GOOD"
                        android:textColor="#4CAF50"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <!-- Bottom Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">

            <!-- Grade Level and Student Code Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/childGrade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grade 6"
                        android:textColor="#E8F4FD"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins" />

                    <TextView
                        android:id="@+id/studentCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID: ABC123XY"
                        android:textColor="#E8F4FD"
                        android:textSize="10sp"
                        android:fontFamily="@font/poppins"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <!-- Tap to View Indicator -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@drawable/tap_indicator_bg"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="#FFFFFF"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View"
                        android:textColor="#FFFFFF"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
