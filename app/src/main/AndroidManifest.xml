<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ðŸ“Œ Essential permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" tools:targetApi="33" />

    <!-- ðŸ“Œ Optional permissions -->
    <uses-permission android:name="android.permission.CAMERA"
        tools:ignore="PermissionImpliesUnsupportedChromeOsHardware" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="29"/>
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".Firebase.EduTrackApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logon"
        android:supportsRtl="true"
        android:theme="@style/Theme.EduCtrack"
        tools:targetApi="31">

        <!-- ðŸ”§ Fix AD_SERVICES_CONFIG conflict -->
        <property
            android:name="android.adservices.AD_SERVICES_CONFIG"
            android:resource="@xml/gma_ad_services_config"
            tools:replace="android:resource" />

        <!-- Splash Activity (Launcher) -->
        <activity
            android:name=".Activity.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.EduCtrack.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Authentication -->
        <activity android:name=".Auth.UnifiedAuthActivity" android:exported="true" />
        <activity android:name=".Auth.ForgotPasswordActivity" android:exported="true" />
        <activity android:name=".Auth.AdminLoginActivity" android:exported="true" />
        <activity android:name=".Auth.AdminForgotPassword" android:exported="true" />

        <!-- Role selection -->
        <activity android:name=".Activity.RoleSelectionActivity" android:exported="true" />
        <activity android:name=".Auth.ActivityParentRegister" android:exported="true" />

        <!-- Registration -->
        <activity android:name=".Auth.RegisterTeacherActivity" android:exported="true" />
        <activity android:name=".Auth.CreateAdminAccountActivity" android:exported="true" />
        <activity android:name=".Auth.ActivityStudentRegister" android:exported="true" />

        <!-- Verification -->
        <activity android:name=".Auth.VerificationCodeActivity" android:exported="true" />

        <!-- Home screens -->
        <activity android:name=".Activity.ParentHomeActivity" android:exported="true" />
        <activity android:name=".Activity.AdminHomeActivity" android:exported="true" />
        <activity android:name=".Activity.AdminHomeActivityNew" android:exported="true" />
        <activity android:name=".Activity.TeacherHomeActivity" android:exported="true"
            tools:ignore="Instantiatable" />
        
        <!-- Parent Activities -->
        <activity android:name=".Activity.AddChildActivity" android:exported="false" />
        <activity android:name=".Activity.ChildDetailActivity" android:exported="false" />
        
        <!-- Teacher Activities -->
        <activity android:name=".Activity.TeacherClassManagementActivity" android:exported="false" />
        <activity android:name=".Activity.TeacherExercisesActivity" android:exported="false" />
        <activity android:name=".Activity.ExerciseGradingActivity" android:exported="false" />
        
        <!-- Admin Activities -->
        <activity android:name=".Activity.AdminAnalyticsActivity" android:exported="false" />
        <activity android:name=".Activity.AdminSettingsActivity" android:exported="false" />
        <activity android:name=".Activity.AdminUserManagementActivityEnhanced" android:exported="false" />

        <!-- Profile -->
        <activity android:name=".Activity.ProfileActivity" android:exported="true" />

        <!-- Terms of Use -->
        <activity android:name=".Auth.TermsOfUseActivity" android:exported="true" />

        <!-- Notifications -->
        <activity android:name=".Activity.NotificationActivity" android:exported="true" />
        <activity android:name=".Activity.AdminNotification" android:exported="false"
            tools:ignore="Instantiatable" />

        <!-- Modules -->
        <activity android:name=".TrackModule.ParentsReportsActivity" android:exported="true" />
        <activity android:name=".TrackModule.HomeworkActivity" android:exported="true" />
        <activity android:name=".TrackModule.StudentExamResultsActivity" android:exported="true" />
        <activity android:name=".TrackModule.AddCalculateScoresActivity" android:exported="true"/>
        <activity android:name=".TrackModule.StudentExercisesActivity" android:exported="true"/>


        <!-- New Activities -->
        <activity android:name=".Activity.LessonsActivity" android:exported="true"/>
        <activity android:name=".Activity.StudentListActivity" android:exported="true"/>
        <activity android:name=".Activity.SearchActivity" android:exported="true"
            tools:ignore="Instantiatable" />
        <activity android:name=".Activity.AdminCreateTeacherActivity" android:exported="true"
            tools:ignore="Instantiatable" />
        <activity android:name=".Activity.AdminStudentDashboardActivity" android:exported="true"/>
        <activity android:name=".Activity.AnalyticsDashboard" android:exported="true"
            tools:ignore="Instantiatable" />
        <activity android:name=".Activity.AdminProfileActivity" android:exported="true"
            tools:ignore="MissingClass" />
        <activity android:name=".Activity.SearchResultActivity" android:exported="true"/>

        <!-- Google Ads -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3324838736230246~7397836141" />

        <!-- Firebase initialization -->
        <meta-data
            android:name="firebase_analytics_collection_enabled"
            android:value="true" />

        <!-- Multidex support -->
        <meta-data
            android:name="android.support.MULTIDEX_ENABLE"
            android:value="true" />
        <activity
            android:name="com.equipe7.eductrack.TrackModule.ActivityAddReportTeacher"
            android:exported="false" />

        <!-- Teacher Exercise Management Activities -->
        <activity
            android:name=".Activity.CreateExerciseActivity"
            android:exported="false"
            android:theme="@style/Theme.EduCtrack" />

        <activity
            android:name=".Activity.GradingActivity"
            android:exported="false"
            android:theme="@style/Theme.EduCtrack" />

        <!-- Admin Management Activities -->
        <activity
            android:name=".Activity.AdminUserManagementActivity"
            android:exported="false"
            android:theme="@style/Theme.EduCtrack" />

    </application>
</manifest>